# Permessi per i binari di sessione
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/local/bin/steamos-session-select
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/local/bin/steamos-session-launch
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/local/bin/steamos-helpers/*

# Permessi per lo switch delle sessioni tramite Systemd
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl start steamos-gamemode@*
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl start steamos-desktop@*
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl stop steamos-gamemode@*
%wheel ALL=(ALL:ALL) NOPASSWD: /usr/bin/systemctl stop steamos-desktop@*
